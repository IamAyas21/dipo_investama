@model DIPO_INVESTAMA.Entity.sp_DepartmentSelect_Result
@using (Html.BeginForm("Edit", "Department", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.DepartmentId)
    <div class="modal-content body-box-primary">
        <div class="modal-header">
            <button type="button" class="close body-close" data-dismiss="modal">×</button>
        </div>
        <div class="modal-body Poppins-Regular font-white">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <label>Department Name</label>
                        @Html.TextBoxFor(model => model.DepartmentName, new { @class = "form-control", @placeholder = "Department Name", autocomplete = "off", required = "required" })
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
            <button type="button" class="btn btn-default" onclick="@Url.Action("Index","Department")">Kembali</button>
        </div>
    </div>
}
