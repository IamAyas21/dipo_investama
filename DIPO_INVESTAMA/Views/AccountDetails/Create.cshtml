@model DIPO_INVESTAMA.Entity.sp_AccountDetailSelect_Result
@using (Html.BeginForm("Create", "AccountDetails", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="modal-content body-box-primary">
        <div class="modal-header">
            <button type="button" class="close body-close" data-dismiss="modal">×</button>
            <h3 class="Poppins-Bold font-white">Account Details / Create</h3>
        </div>
        <div class="modal-body Poppins-Regular font-white">
            <div class="">
                <div class="row">
                    <div class="col-md-4">
                        <label>No</label>
                        @Html.TextBoxFor(model => model.No, new { @class = "form-control", @placeholder = "No", autocomplete = "off", required = "required" })
                    </div>
                    <div class="col-md-4">
                        <label>Name</label>
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "Name", autocomplete = "off", required = "required" })
                    </div>
                    <div class="col-md-4">
                        <label>Account No</label>
                        @Html.DropDownListFor(model => model.AccountId, ViewBag.AccountList as SelectList, new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a type="button" class="btn btn-default" href="@Url.Action("Index","MasterAccountDetails")">Kembali</a>
        </div>
    </div>
}
