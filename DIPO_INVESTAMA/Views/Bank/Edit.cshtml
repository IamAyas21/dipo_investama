@model DIPO_INVESTAMA.Entity.sp_BankSelect_Result
@using (Html.BeginForm("Edit", "Bank", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.BankId)
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">×</button>
        </div>
        <div class="modal-body">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <label>Bank Name</label>
                        @Html.TextBoxFor(model => model.BankName, new { @class = "form-control", @placeholder = "Bank Name", autocomplete = "off", required = "required" })
                    </div>
                    <div class="col-md-4">
                        <label>Account No</label>
                        @Html.TextBoxFor(model => model.AccountNo, new { @class = "form-control", @placeholder = "Account No", autocomplete = "off", required = "required" })
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
            <button type="button" class="btn btn-default" onclick="@Url.Action("Index","Bank")">Kembali</button>
        </div>
    </div>
}
